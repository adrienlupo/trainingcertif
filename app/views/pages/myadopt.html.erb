<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/degkqrdcu/image/upload/v1680078151/steven-kamenar-MMJx78V7xS8-unsplash_drxd8z.jpg');">
  <div class="container">
    <h1> My adoptions </h1>
  </div>
</div>

<div class="container">
  <div class="row mt-5">
    <% if @adoptions.empty? %>
    <h3>You have no adoptions yet</h3>
    <% end %>
    <h3>Your adoptions</h3>
    <% @adoptions.each do |adoption| %>
      <div class="col-4">
        <div class="card-category mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path adoption.tree.photos.first.key %>')">
          <%= link_to(adoption.name, tree_path(adoption.tree), style: "color: white; text-decoration: none;") %>
          <div class="card-tags">
              <span><%= adoption.tree.price_per_year %> €</span>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<div class=" mt-3">
  <div class="row mt-5">
    <% if @trees.empty? %>
    <h3>You have no tree yet</h3>
    <% end %>
    <h3>Your trees</h3>
    <% @trees.each do |tree| %>
      <div class="col-4">
        <div class="card-category mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path tree.photos.first.key %>')">
          <%= link_to(tree.name, tree_path(tree), style: "color: white; text-decoration: none;") %>
          <div class="card-tags">
              <span><%= tree.price_per_year %> €</span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
